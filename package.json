{
    "name": "ns-file-parser",
    "version": "1.0.0",
    "description": "Nord Stage file parser",
    "scripts": {
        "client": "cd client && yarn start",
        "server": "nodemon server.js",
        "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
        "start": "NODE_ENV=production node server.js",
        "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
        "test": "jest",
        "doc:1ns3": "jsdoc2md server/ns3/program/*.js > docs/ns3/program/ns3-doc.md",
        "doc:1ns2": "jsdoc2md server/ns2/program/*.js > docs/ns2/program/ns2-doc.md",
        "doc:1": "npm run doc:1ns3 && npm run doc:1ns2",
        "doc:2": "node ./automation/docs/build-doc.js",
        "doc:3": "pandoc ./docs/ns3/program/header.yaml ./automation/docs/out/*.md -s -o ./docs/nord-mapping.pdf --css=./../pandoc2.css -V geometry:margin=2cm -V geometry:a4paper -V linkcolor:blue",
        "doc": "npm run doc:1 && npm run doc:2 && npm run doc:3"
    },
    "dependencies": {
        "body-parser": "^1.18.3",
        "byte-size": "^7.0.0",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "lodash.clonedeep": "^4.5.0",
        "multer": "^1.4.2",
        "nodemon": "^2.0.4",
        "serve-index": "^1.9.1",
        "uuid": "^8.3.0"
    },
    "devDependencies": {
        "@types/jest": "^26.0.10",
        "better-docs": "^2.3.1",
        "concurrently": "^5.3.0",
        "crypto-js": "^4.0.0",
        "eslint": "^6.6.0",
        "jest": "^24.9.0",
        "jsdoc": "^3.6.5",
        "jsdoc-to-markdown": "^6.0.1",
        "markdown-magic": "^1.0.0",
        "markdown-magic-jsdoc": "^1.0.1",
        "node-pandoc": "^0.3.0",
        "prettier": "^2.1.1",
        "showdown": "^1.9.1",
        "unzipper": "^0.10.11",
        "xml-js": "^1.6.11",
        "xxhashjs": "^0.2.2"
    },
    "keywords": [
        "Nord",
        "Stage",
        "NS3",
        "File"
    ],
    "author": "Christian Florentz (christian.florentz@gmail.com)",
    "license": "MIT",
    "jest": {
        "modulePathIgnorePatterns": [
            "client"
        ]
    },
    "eslintConfig": {
        "root": true,
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module"
        },
        "extends": [
            "eslint:recommended",
            "plugin:mocha/recommended",
            "plugin:@typescript-eslint/recommended",
            "prettier/@typescript-eslint",
            "plugin:prettier/recommended"
        ],
        "env": {
            "commonjs": true,
            "es6": true,
            "node": true,
            "jest": true
        },
        "plugins": [
            "jest"
        ],
        "ignorePatterns": [
            "client/**/*.js"
        ]
    },
    "prettier": {}
}
