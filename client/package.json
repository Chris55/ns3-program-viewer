{
    "author": "Christian Florentz (christian.florentz@gmail.com)",
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "build": {
        "appId": "com.chris55.nord-file-viewer",
        "productName": "File Viewer for Nord Stage",
        "copyright": "Copyright Â© 2021 ${author}\n\nSpecial thanks to Andreas Gallenmueller (@gaaal)\nThanks to other NUF members: @rpossemo, @cookie, @gordon, @Hobster\n\n\nDisclaimer: We are not affiliated, associated, endorsed by, or in any way officially connected with Nord Keyboards / Clavia DMI AB, or any of its subsidiaries or its affiliates.\nThe names Nord and Clavia as well as related names, marks, emblems and images are registered trademarks of their respective owners.",
        "publish": [
            {
                "provider": "github",
                "owner": "Chris55",
                "repo": "ns3-program-viewer"
            }
        ],
        "extraResources": [],
        "afterSign": "./afterSignHook.js",
        "mac": {
            "target": [
                "dmg",
                "mas",
                "zip"
            ],
            "category": "public.app-category.music",
            "icon": "assets/icons/app.icns",
            "electronLanguages": [
                "en"
            ],
            "entitlements": "./build/entitlements.mac.plist",
            "entitlementsInherit": "./build/entitlements.mac.plist",
            "hardenedRuntime": true,
            "gatekeeperAssess": false
        },
        "mas": {
            "hardenedRuntime": false,
            "category": "public.app-category.music",
            "provisioningProfile": "embedded.provisionprofile",
            "entitlements": "build/entitlements.mas.plist",
            "entitlementsInherit": "build/entitlements.mas.inherit.plist",
            "gatekeeperAssess": false,
            "icon": "assets/icons/app.icns"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icons/app.ico"
        },
        "dmg": {
            "sign": false
        },
        "linux": {
            "target": [
                "deb",
                "rpm"
            ],
            "maintainer": "christian.florentz@gmail.com",
            "category": "Utility"
        },
        "deb": {},
        "appImage": {},
        "fileAssociations": [
            {
                "ext": [
                    "ns3f",
                    "ns3y",
                    "ns2p"
                ],
                "role": "Viewer"
            }
        ]
    },
    "dependencies": {
        "byte-size": "^7.0.0",
        "electron-is-dev": "^1.2.0",
        "electron-log": "^4.3.1",
        "electron-updater": "^4.3.5"
    },
    "description": "The unofficial Nord Stage 2/2EX/3 Program viewer tool.",
    "devDependencies": {
        "@react-pdf/renderer": "^1.6.12",
        "@reduxjs/toolkit": "^1.5.1",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^7.1.2",
        "axios": "^0.21.1",
        "bootstrap": "^4.5.3",
        "concurrently": "^5.3.0",
        "cross-env": "^7.0.3",
        "electron": "^11.2.1",
        "electron-builder": "^22.9.1",
        "electron-notarize": "^1.0.0",
        "html2canvas": "^1.0.0-rc.7",
        "jspdf": "^2.3.0",
        "node-sass": "^4.14.1",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1",
        "react": "^16.13.1",
        "react-bootstrap": "^1.4.0",
        "react-dom": "^16.13.1",
        "react-json-tree": "^0.12.1",
        "react-redux": "^7.2.4",
        "react-router-dom": "^5.2.0",
        "react-scripts": "3.4.3",
        "react-toastify": "^6.0.8",
        "wait-on": "^5.2.1"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "plugin:prettier/recommended"
        ]
    },
    "homepage": "./",
    "main": "public/electron.js",
    "name": "ns3-file-parser-client",
    "private": true,
    "proxy": "http://localhost:4000/",
    "repository": {
        "type": "git",
        "url": "https://github.com/Chris55/ns3-program-viewer.git"
    },
    "scripts": {
        "react-start": "react-scripts start",
        "react-build": "react-scripts build",
        "react-test": "react-scripts test --env=jsdom",
        "react-eject": "react-scripts eject",
        "electron-start": "nodemon --watch ./public/* --exec \"electron .\"",
        "electron-build": "electron-builder",
        "deploy": "yarn react-build && yarn electron-build build -mwl --publish=always && yarn electron-build build -l --arm64 --publish=always",
        "build": "yarn react-build && yarn electron-build build -mwl --publish never && yarn electron-build build -l --arm64 --publish never",
        "dev": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && yarn electron-start\""
    },
    "version": "0.3.3"
}
